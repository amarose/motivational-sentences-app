<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <!-- Set a solid background color -->
        <item name="windowSplashScreenBackground">@color/black</item>
        
        <!-- Use our custom drawable for the splash -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_content</item>
        
        <!-- Control animation behavior -->
        <item name="windowSplashScreenAnimationDuration">300</item>
        
        <!-- No branding image to ensure consistent appearance -->
        <item name="android:windowSplashScreenBrandingImage" tools:targetApi="31">@null</item>
        
        <!-- Theme after splash -->
        <item name="postSplashScreenTheme">@style/Theme.MotivationalSentencesApp</item>
    </style>

    <style name="Theme.MotivationalSentencesApp" parent="android:Theme.Material.Light.NoActionBar" />
</resources>